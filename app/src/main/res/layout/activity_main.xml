<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">


    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/pcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_artwork="true"
            app:show_timeout="0"
            app:player_layout_id="@layout/player_view"
            app:show_shuffle_button="true"
            app:controller_layout_id="@layout/player_control"
            app:use_controller="true"


    />


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/sel_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#EBEDF0"
    >


        <TextView
                android:text="@string/select_dir_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#2C2D2E"
        />

        <TextView
                android:text="@string/select_dir_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#71757A"
                android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_select"
                android:layout_margin="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_select"
                android:background="@android:color/transparent"/>

    </LinearLayout>
</LinearLayout>
