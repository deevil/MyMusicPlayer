<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"

              android:orientation="vertical"
>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"

            android:layout_weight="0"

    >


        <ImageButton
                android:src="@drawable/ic_prev"
                style="@style/ExoMediaButton.Previous"
        />


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="24sp"
                    android:textColor="@color/text_color_2"
                    android:gravity="center"
                    android:layout_margin="2dp"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Artist"
                    android:fontFamily="@string/text_font_2"
                    android:id="@+id/appCompatTextView"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_1"
                    android:gravity="center"
                    android:layout_margin="2dp"
            />

        </LinearLayout>
        <ImageButton
                android:src="@drawable/ic_settings"
                style="@style/ExoMediaButton.Previous"
        />

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

    >
        <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="26dp"
                app:scrubber_color="@color/colorAccent"
                app:played_color="@color/colorAccent"
                app:buffered_color="#999999"
                app:unplayed_color="#999999"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
    >

        <TextView android:id="@id/exo_position"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:paddingLeft="4dp"
                  android:paddingRight="4dp"
                  android:includeFontPadding="false"
                  android:layout_gravity="start"
                  android:layout_weight="1"
                  android:fontFamily="@string/text_font_2"
                  android:textSize="@dimen/text_size_mini"
                  android:textColor="@color/text_color_1"

        />


        <TextView android:id="@id/exo_duration"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:paddingLeft="4dp"
                  android:paddingRight="4dp"
                  android:includeFontPadding="false"
                  android:layout_gravity="end"
                  android:layout_weight="1"
                  android:gravity="end"
                  android:fontFamily="@string/text_font_2"
                  android:textSize="@dimen/text_size_mini"
                  android:textColor="@color/text_color_3"

        />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
    >

        <ImageButton android:id="@id/exo_prev"
                     style="@style/ExoMediaButton.Previous"
                     android:src="@drawable/ic_prev"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@id/exo_play"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ExoMediaButton.Play"
                android:layout_gravity="center"
                app:maxImageSize="58dp"
                app:fabCustomSize="80dp"
        />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@id/exo_pause"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ExoMediaButton.Pause"
                android:layout_gravity="center"
                app:maxImageSize="58dp"
                app:fabCustomSize="80dp"
        />


        <ImageButton android:id="@id/exo_next"
                     style="@style/ExoMediaButton.Next"
                     android:adjustViewBounds="false"
                     android:src="@drawable/ic_next"
        />


    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal"
            android:background="@color/colorPink"
    >


        <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_margin="3dp"
                android:id="@id/exo_shuffle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_shuffle_2"
                android:layout_gravity="start"
                style="@style/ExoMediaButton.Shuffle"
                android:layout_alignParentStart="true"

        />


        <ImageButton

                android:id="@id/exo_repeat_toggle"
                style="@style/ExoMediaButton.Shuffle"
                android:layout_gravity="end"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@drawable/ic_repeat_2"
                android:background="@color/colorPink"
                android:elevation="@dimen/space8"
                android:layout_alignParentEnd="true"

        />



       <!-- <TextView android:id="@id/exo_position"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:paddingLeft="4dp"
                  android:paddingRight="4dp"
                  android:includeFontPadding="false"
                  android:layout_gravity="start"
                  android:layout_weight="1"
                  android:fontFamily="@string/text_font_2"
                  android:textSize="@dimen/text_size_mini"
                  android:textColor="@color/text_color_1"

        />


        <TextView android:id="@id/exo_duration"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:paddingLeft="4dp"
                  android:paddingRight="4dp"
                  android:includeFontPadding="false"
                  android:layout_gravity="end"
                  android:layout_weight="1"
                  android:gravity="end"
                  android:fontFamily="@string/text_font_2"
                  android:textSize="@dimen/text_size_mini"
                  android:textColor="@color/text_color_3"

        />-->

    </RelativeLayout>


</LinearLayout>
